---
interface Props {
	title: string;
	description: string;
	pubDate: Date;
	url: string;
	tags: string[];
}

const { title, description, pubDate, url, tags } = Astro.props;

const schema = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "CreativeWork",
			"headline": title,
			"description": description,
			"datePublished": pubDate.toISOString().substring(0, 10),
			"author": {
				"@type": "Person",
				"name": "Mingrath Mekavichai",
			},
			"publisher": {
				"@type": "Organization",
				"name": "SMEAI",
				"url": Astro.site?.href,
			},
			"mainEntityOfPage": url,
			"keywords": tags,
			"inLanguage": "th",
		},
		{
			"@type": "BreadcrumbList",
			"itemListElement": [
				{
					"@type": "ListItem",
					"position": 1,
					"name": "หน้าแรก",
					"item": new URL("/", Astro.site).href,
				},
				{
					"@type": "ListItem",
					"position": 2,
					"name": "ผลงาน",
					"item": new URL("/showcase/", Astro.site).href,
				},
				{
					"@type": "ListItem",
					"position": 3,
					"name": title,
				},
			],
		},
	],
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
